<UserControl x:Class="Kassarakendus.UserControls.ErrorMessageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kassarakendus.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Background="White"
                    Width="300">
            <TextBlock x:Name="tbErrText"
                       FontSize="24"
                       TextAlignment="Center"
                       Margin="10"
                       TextWrapping="Wrap"/>
            <Button x:Name="btnCancel" 
                    Style="{StaticResource PurchaseButtonStyle}"
                    Click="btnCancelError_Click"
                    Background="Tomato"
                    Margin="10">
                <Image Source="../Views/Images/Icons/appbar.close.png" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
